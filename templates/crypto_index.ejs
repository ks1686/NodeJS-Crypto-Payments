<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wallet QR Code & XLM Transaction Check</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        text-align: center;
        margin: 50px;
      }
      .qr-code {
        max-width: 300px;
        margin: auto;
      }
      #result {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <h1>Wallet QR Code</h1>
    <img class="qr-code" src="<%= qr_img_path %>" alt="Wallet QR Code" />
    <!-- Use the paymentMessage to give details under the QR code -->
    <p><%= paymentMessage %></p>

    <div id="result"></div>

    <script>
      // Function to poll the server for transaction status
      async function pollTransactionStatus(memo) {
        try {
          const response = await fetch("/check_transaction", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ memo }),
          });
          const data = await response.json();

          if (data.status === "success") {
            document.getElementById("result").innerHTML = `
              <h2>Transaction Confirmed!</h2>
              <p>Transaction ID: ${data.transaction.id}</p>
              <p>Amount: ${data.transaction.amount} ${
              data.transaction.asset_code || "XLM"
            }</p>
            `;
          } else if (data.status === "timeout") {
            document.getElementById("result").innerHTML = `
              <h2>Transaction Not Found</h2>
              <p>${data.message}</p>
            `;
          }
        } catch (error) {
          console.error("Error polling transaction status:", error);
        }
      }

      // Extract the memo from the server-rendered value
      const memo = "<%= memo %>";

      // Start polling for the transaction status
      if (memo) {
        pollTransactionStatus(memo);
      }
    </script>
  </body>
</html>
